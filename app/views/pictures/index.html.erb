<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url(:thumb) %></td>
        <td><%= picture.text %></td>
        <td><%= link_to 'Show', album_picture_path(:id => picture.id) %></td>
        <td><%= link_to 'Edit', edit_album_picture_path(:id => picture) %></td>
        <td><%= link_to 'Destroy', album_picture_path(:id => picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', albums_path %>

<br>

<%= link_to 'New Picture', new_album_picture_path %>
